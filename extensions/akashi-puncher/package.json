{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "akashi-puncher",
  "title": "AKASHI Puncher",
  "description": "Punching with AKASHI API👊",
  "icon": "extension-icon.png",
  "author": "tacona",
  "owner": "cerisier*",
  "access": "public",
  "categories": [
    "Applications"
  ],
  "preferences": [
    {
      "name": "Domain",
      "title": "AKASHI Domain",
      "description": "利用しているAKASHIのドメインを選択してください",
      "type": "dropdown",
      "data": [
        {
          "title": "atnd.ak4.jp",
          "value": "atnd.ak4.jp"
        },
        {
          "title": "atnd-awj.ak4.jp",
          "value": "atnd-awj.ak4.jp"
        }
      ],
      "required": true
    },
    {
      "name": "CompanyId",
      "type": "textfield",
      "title": "企業ID",
      "required": true,
      "description": "AKASHIの企業IDをを登録してください"
    },
    {
      "name": "APIToken",
      "type": "textfield",
      "title": "AKASHI API Token",
      "required": true,
      "description": "AKASHIのAPIトークンを登録してください"
    }
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "akashi-shukkin",
      "title": "AKASHI 出勤",
      "description": "現在時刻で出勤打刻を行ないます",
      "mode": "no-view"
    },
    {
      "name": "akashi-taikin",
      "title": "AKASHI 退勤",
      "description": "現在時刻で退勤打刻を行ないます",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.88.3",
    "@raycast/utils": "^1.17.0",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "volta": {
    "node": "22.12.0"
  }
}
